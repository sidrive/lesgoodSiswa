<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_margin"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin">




    <com.lesgood.siswa.util.TypefacedTextView
        android:id="@+id/txt_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail Guru"
        android:textSize="18sp"
        app:typeface="Roboto-Medium.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center|center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.lesgood.siswa.util.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama :"
                android:textSize="12sp"
                app:typeface="Roboto-Light.ttf" />

            <com.lesgood.siswa.util.TypefacedTextView
                android:id="@+id/txt_nama_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GeekGarden Dev"
                android:textSize="16sp"
                app:typeface="Roboto-Medium.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.lesgood.siswa.util.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat :"
                android:textSize="12sp"
                app:typeface="Roboto-Light.ttf" />

            <com.lesgood.siswa.util.TypefacedTextView
                android:id="@+id/txt_alamat_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Kinanti, Condong Catur, Sleman"
                android:textSize="14sp"
                app:typeface="Roboto-Medium.ttf" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.lesgood.siswa.util.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No. Telp/HP :"
                android:textSize="12sp"
                app:typeface="Roboto-Light.ttf" />

            <com.lesgood.siswa.util.TypefacedTextView
                android:id="@+id/txt_telp_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08123456789"
                android:textSize="14sp"
                app:typeface="Roboto-Medium.ttf" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.lesgood.siswa.util.TypefacedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="12sp"
                app:typeface="Roboto-Light.ttf" />

            <com.lesgood.siswa.util.TypefacedTextView
                android:id="@+id/txt_email_guru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="geekgarden@gmail.com"
                android:textSize="14sp"
                app:typeface="Roboto-Medium.ttf" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>