<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorShadow2">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:titleTextColor="@color/colorWhite"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="?actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_margin"
            android:paddingRight="@dimen/activity_margin"
            android:paddingTop="@dimen/activity_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin">

                <Button
                    android:id="@+id/btn_reviews"
                    style="@style/com_facebook_button_like"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="REVIEW PENGAJAR"
                    android:textAppearance="@style/TextAppearance.AppCompat" />

                <com.lesgood.app.util.TypefacedTextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agus Setiawan"
                    android:textSize="18sp"
                    app:typeface="Roboto-Medium.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pelajaran"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bahasa Indonesia SMP"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pertemuan"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_pertemuan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20 kali"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_order_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="#123153321"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jumlah Murid"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_tota_person"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2 Orang"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kamis, 7 Apr, 13:50"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_margin"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.lesgood.app.util.TypefacedTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment"
                            android:textSize="12sp"
                            app:typeface="Roboto-Light.ttf" />

                        <com.lesgood.app.util.TypefacedTextView
                            android:id="@+id/txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="WAITING"
                            android:textSize="14sp"
                            app:typeface="Roboto-Medium.ttf" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:orientation="horizontal">

                    <com.lesgood.app.util.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textSize="16sp"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.lesgood.app.util.TypefacedTextView
                        android:id="@+id/txt_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp.400.000"
                        android:textSize="16sp"
                        app:typeface="Roboto-Medium.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:orientation="horizontal">

                    <com.lesgood.app.util.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Discount"
                        android:textSize="16sp"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.lesgood.app.util.TypefacedTextView
                        android:id="@+id/txt_disc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp.200.000"
                        android:textSize="16sp"
                        app:typeface="Roboto-Medium.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:orientation="horizontal">

                    <com.lesgood.app.util.TypefacedTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jumlah Yang Harus Dibayar"
                        android:textSize="16sp"
                        app:typeface="Roboto-Regular.ttf" />

                    <com.lesgood.app.util.TypefacedTextView
                        android:id="@+id/txt_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rp.600.000"
                        android:textSize="16sp"
                        app:typeface="Roboto-Medium.ttf" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_margin"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin"
                android:visibility="visible">

                <com.lesgood.app.util.TypefacedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Detail Lokasi"
                    app:typeface="Roboto-Medium.ttf" />

                <com.lesgood.app.util.TypefacedTextView
                    android:id="@+id/txt_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jarak 13 km"
                    android:textSize="16sp"
                    app:typeface="Roboto-Regular.ttf" />

                <ImageView
                    android:id="@+id/img_map"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorGrey400" />

                <com.lesgood.app.util.TypefacedTextView
                    android:id="@+id/txt_detail_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_half_margin"
                    android:layout_weight="1"
                    android:text="Detail lokasi"
                    android:textSize="16sp"
                    app:typeface="Roboto-Light.ttf" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="518dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorShadow2" />

        <LinearLayout
            android:id="@+id/lin_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_positif"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bayar"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent" />



            <Button
                android:id="@+id/btn_negatif"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BATALKAN"
                android:textAllCaps="true"
                android:textColor="@color/colorRed" />
        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/view_progress"/>

</android.support.design.widget.CoordinatorLayout>